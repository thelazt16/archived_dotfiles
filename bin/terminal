#!/usr/bin/env bash

if [ "$1" == "--quake" ]; then
  id=$(xdotool search --class DropTerm)
  if [ -z "$id" ]; then
    alacritty --class 'DropTerm,DropTerm' --title 'Alacritty Dropdown' --config-file ~/.config/bspwm/alacritty/dropterm.yml
  else
    bspc node "$id" --flag hidden -f
  fi
else
  alacritty --config-file ~/.config/bspwm/alacritty/alacritty.yml
fi