##---------- Keybindings for bspwm ----------##

# Terminal (alacritty)
super + {_, shift} +Return
	terminal {_, --quake}

super + F2
	terminal --quake

##---------- Rofi Launcher & Menus ----------##

# Rofi App Launcher
alt + F1
	sh ~/.config/bspwm/rofi/bin/launcher

# Rofi App Launcher
super + d
	sh ~/.config/bspwm/rofi/bin/launcher

# Rofi Network Menu
super + n
	nmd

# Rofi Menus
super + shift + {w,m,x,d}
	sh ~/.config/bspwm/rofi/bin/{windows,mpd,powermenu,asroot}

super + {_,shift} + Tab
	sh ~/.config/bspwm/rofi/bin/{windowscd,windows}

super + shift + {s,n,t}
	sh ~/.config/bspwm/rofi/bin/{screenshot,network,themes}

super + XF86AudioPlay
	$HOME/.scripts/play.sh

##---------- Applications ----------##

# Lockscreen
super + ctrl + l
    bsplock

##---------- System Keys ----------##

# Take a screenshot
Print
	takeshot --now
	
# Take screenshot in 5 second
super + alt + Print	
	takeshot --in5

# Take screenshot in 10 second
super + shift + Print	
	takeshot --in10

# Take screenshot of active window
super + Print
	takeshot --win

# Take screenshot of area
super + ctrl + Print
	takeshot --area

# Brighness control
XF86MonBrightness{Up,Down}
	brightness{ --inc, --dec}

# Turn Off/On Screen
XF86ScreenSaver
	sh $HOME/.scripts/brightness_off.sh
	
# Volume control
XF86Audio{RaiseVolume,LowerVolume}
	volume{ --inc, --dec}

XF86AudioMute
	volume --toggle
	
# Music control
XF86Audio{Next,Prev,Play,Stop}
	mpc {next,prev,toggle,stop}

# External Monitor Brightness
super + {F11,F12}
	external_brightness --{dec,inc}

##---------- Bspwm ----------##

# Lockscreen
super + ctrl + l
  bsplock

# Reload Keybindings
super + Escape
	pkill -USR1 -x sxhkd

# Quit/Restart bspwm
super + shift + {e,r}
	bspc {quit,wm -r}

# Close App
super + {_, shift} + q
	{bspc node -c, xkill}

# Monocle
super + m
	bspc desktop -l next
	
# Split horizontal, vertical or cancel
# super + {h,v,q}
# 	bspc node -p {east,south,cancel}

# Preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Toggle beetwen floating & tiled
super + space
    bspc node -t "~"{floating,tiled}

# Pseudo Tiled & tiled mode
super + p
    bspc node -t "~"{pseudo_tiled,tiled}

# Set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# Change focus of the window
super + {Left,Down,Up,Right}
	bspc node -f {west,south,north,east}

# Move the window with smart remove
super + shift + {Left,Down,Up,Right}
	bspwm_smart_move {west,south,north,east}

# Change focus to next/previous window inside the workspace
#super + {_,shift} + Tab
#	bspc node -f {next.local,prev.local}

# Switch workspace
super + ctrl + alt + {Left,Right}
	bspc desktop -f {prev.local,next.local}

# Switch to last opened workspace
# super + {Tab,grave}
#	bspc {node,desktop} -f last

# Send focused window to another workspace
super + shift + {1-9}
	move_desktop_multi {1-9}

# Change workspace
super + {1-9}
	focus_desktop_multi {1-9}
	
# Resize window
super + ctrl + {Left,Down,Up,Right}
	bspwm_resize {west,south,north,east} 10
	
# Move floating windows
# alt + shift + {Left,Down,Up,Right}
#	 bspc node -v {-20 0,0 20,0 -20,20 0}

# Hide/Unhide Window
super + shift + i
	winmask		

##---------- EOF ----------##